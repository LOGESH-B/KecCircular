<%- layout('layouts/boilerplate') -%>


<link rel="stylesheet" href="/stylesheets/login.scss">

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-sm-12">
            <div class="card shadow mt-5">
                <div class="card-body">
                        <h3 class="text-center login">Reset Request</h3>
                       
                            <form action="/user/forgotten-password" class="needs-validation" method="post" novalidate>
                                <div class="form-group mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input class="form-control  mb-3" id="email" type="email" name="email" required>
                                </div>
                               <div class="d-grid gap-2">
                                <button class="btn">Reset Link</button>
                               </div>

                            </form>
                        </div>
                       
                </div>
            </div>
        </div>
    </div>
    
  <script src="/js/validation.js"></script>