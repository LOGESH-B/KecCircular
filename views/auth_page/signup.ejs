<%- layout('layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheets/signup.scss">
<div class="container my-5 ">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-sm-12">
            <div class="card shadow">
                <div class="card-body">
                        <h3 class="text-center signup mb-3">SignUp</h3>
                        <form class="row g-2" action="/user/signup/web" class="needs-validation" method="post" novalidate>
                            <div class="form-group mb-3 col-6">
                                <label for="name" class="form-label">Name</label>
                                <input class="form-control mb-3" id="name" type="text" name="name" required>
                            </div>
                            <div class="form-group mb-3 col-6">
                                    <label for="email" class="form-label">Email</label>
                                    <input class="form-control  mb-3" id="email" type="email" name="email" required>
                            </div>
                            <div class="form-group mb-3 col-6">
                                    <label for="password" class="form-label">Password</label>
                                    <input class="form-control  mb-3" id="password" type="password" name="password" required>
                            </div>
                            <div class="form-group mb-3 col-6">
                                <label for="password" class="form-label">Confirm Password</label>
                                <input class="form-control  mb-3" id="password" type="password" name="confirmpassword" required>
                            </div>
                            <div class="form-group mb-3 col-6">
                                <label for="type" class="form-label">User Type</label>
                                <select name="type" class="form-select mb-3" id="isadmin" required>
                                    <option value="faculty" selected>Faculty</option>
                                    <option value="admin" >Admin</option>
                                    <option value="department-admin">Department Admin</option>
                                </select>
                            </div>
                           <div class="form-group mb-3 col-6">
                                <label for="department" class="form-label">Department (if department admin)</label>
                                <select name="department" class="form-select mb-3" id="department" required>
                                    <option value="none">None</option>
                                    <% department.dept.forEach(element => { %>
                                        <option value="<%= element %> "><%= element %> </option>
                                    <% }) %>
                                  
                                </select>
                           </div>
                           
                            
                            <div class="d-grid gap-2">
                                   <button class="btn">SignUp</button>
                            </div>
                            
                        </form>
                </div>
            </div>
        </div>
    </div>
  </div>
  
  <script src="/js/validation.js"></script>