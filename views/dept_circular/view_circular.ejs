                                                                <div>Department:
                                                                    <% ele.dept.forEach(element=> { %>
                                                                        <%= element %>
                                                                            <% }) %>
                                                                </div>
                                                            </div>
                                                            <div>
                                                                <a href="http://keccircular.onrender.com/<%=ele.filePath  %> "
                                                                    class="text-dark" style="text-decoration:none;"
                                                                    target="_blank" rel="noopener noreferrer">
                                                                    <i class="fa-solid fa-chevron-right"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                        <div
