<%- layout('layouts/boilerplate') -%>
    <link href="/stylesheets/viewCircular.scss">
    <div class="container view-circular-container">
        <h3 class="display-6">Today</h3>
        <hr>
        <% todayCircular.forEach((ele,index)=> {%>
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="p-3 d-flex justify-content-between align-items-center ">
                            <div>
                                <div>Circular Number: <%=ele.number %>
                                </div>
                                <div>Circular Title: <%=ele.title %>
                                </div>
                                <div>Batch:
                                    <% ele.batch.forEach(element=> { %>
                                        <%= element %>
                                            <% }) %>
                                </div>
                                <div>Department:
                                    <% ele.dept.forEach(element=> { %>
                                        <%= element %>
                                            <% }) %>
                                </div>
                            </div>
                            <div>
                                <a href="http://keccircular.onrender.com/<%=ele.filePath  %> " class="text-dark"
                                    style="text-decoration:none;" target="_blank" rel="noopener noreferrer">


                                    <i class="fa-solid fa-chevron-right"></i>

                                </a>
                            </div>
                        </div>
                        <div
                            class="d-flex justify-content-between border border-2 pt-2 px-3 border-end-0 border-start-0 border-bottom-0">
                            <form action="/dept/<%=ele._id%>?_method=DELETE" method="POST">
                                <button class="btn"> <i class="fa-solid fa-trash px-1"></i> </button>
                            </form>
                            <div>
                                <i class="fa-regular fa-clock"></i>
                                <%=ele.postedOn.toString().substring(4,15) %>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
            </div>
            <% })%>

                <h3 class="display-6">Yesterday</h3>
                <hr>
                <% yesterdayCircular.forEach((ele,index)=> {%>
                    <div class="col-md-4">
