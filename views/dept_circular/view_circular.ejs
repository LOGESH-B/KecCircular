                                <div>
                                    <h4 class="text-primary">
                                        <%= element.title %>
                                    </h4>
                                    <div class="row">

                                        <% element.data.forEach( (ele,index)=>{%>
                                            <div class="col-md-4">
                                                <div class="card shadow">
                                                    <div class="card-body">
                                                        <div
                                                            class="p-3 d-flex justify-content-between align-items-center ">
                                                            <div>
                                                                <div>Circular Number: <%=ele.number %>
                                                                </div>
                                                                <div>Circular Title: <%=ele.title %>
